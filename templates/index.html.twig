{% extends 'base.html.twig' %}

{% block title %}Welcome page!{% endblock %}

{% block nav %}
    {% include('Security/nav-security.html.twig') %}
{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h1 class="display-4">Welcome to our quiz!</h1>
        <p class="lead">Take part in quizzes and become the best!</p>
        <hr class="my-4">
        <p>Please login or signup to start.</p>
        <div class="lead">
            <a class="btn btn-primary btn-lg" href="{{ path('security_login')}}" role="button">Login</a>
            <a class="btn btn-primary btn-lg" href="{{ path('user_registration')}}" role="button">Sign Up</a>
            <hr class="line">
            <a class="btn btn-outline-secondary" href="{{ path('resetPassword')}}" role="button">Forgot password?</a>
        </div>
    </div>
{% endblock %}