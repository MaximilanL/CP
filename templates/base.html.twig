<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}Welcome!{% endblock %}
        </title>

        <link rel="stylesheet" href="https://bootswatch.com/4/minty/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {% block stylesheets %}{% endblock %}

    </head>

    <body>
        {% block nav %}
            <nav class="navbar navbar-expand-sm navbar-dark bg-primary mb-3">
                <div class="container">
                    <a href="{{ path('main') }}" class="navbar-brand">BestQuizes</a>

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mobile-nav">
                        <span class="navbar-toggle-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="mobile-nav">
                        <ul class="navbar-nav ml-auto">
                            {%  if app.user.roles==["ROLE_ADMIN"] %}
                                <li class="nav-item">
                                    <a href="{{ path('quiz_index') }}" class="nav-link">Create new quiz</a>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('userList') }}" class="nav-link">User control</a>
                                </li>
                            {% endif %}
                                <li class="nav-item">
                                    <a href="{{ path('main') }}" class="nav-link">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path("security_logout") }}" class="nav-link">Logout</a>
                                </li>
                        </ul>
                    </div>
                </div>
            </nav>
        {% endblock %}

        {% block body %}{% endblock %}

        <footer id="sticky">

            <div>Â© 2018 Copyright:
                <a href="#" class="footer-link"> Quiz.com</a>
            </div>

        </footer>

        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
        <script src="{{ asset('build/app.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
